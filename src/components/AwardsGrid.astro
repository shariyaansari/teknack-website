<section
  class="spad semi-dark-bg"
  style="position: relative;"
>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="row text-center justify-content-center">
        <div class="" style="vertical-align: middle;">
          <h2 class="award-title">
            {title}
          </h2>
        </div>
      </div>
      <div class="col-xs-12 col-lg-12">
        <div class="row">
          {
            awardsData.map((item) => (
              <div class="col-lg-6 col-md-6 col-sm-12 justify-content-center">
                <div class="portfolio__item justify-content-center">
                  <div class="services__title">
                    <div class="section-title">
                      <h3>{item.awardTitle}</h3>
                    </div>
                  </div>
                  <div style="display: flex;justify-content: center;align-items: center;">
                    <a
                      href={item.gameLink}
                      target="_blank"
                      style="text-align: center;"
                    >
                      <img
                        src={item.gameIcon}
                        style="width: 40%;margin:auto;margin-bottom: 20px;"
                        alt={item.gameName}
                      />
                    </a>
                  </div>
                  <div class="portfolio__item__text">
                    <a href={item.gameLink} target="_blank">
                      <h4>{item.gameName}</h4>
                    </a>
                    <span>{item.devNames}</span>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
